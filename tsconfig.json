{
    "compilerOptions": {
        "module": "commonJs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@models/*": ["models/*"],
            "@interfaces/*": ["interfaces/*"],
            "@constants/*": ["constants/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "lib": ["es2020"],
    "exclude": ["node_modules"]
}
