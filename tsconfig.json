{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@models/*": ["models/*"],
            "@interfaces/*": ["interfaces/*"],
            "@constants/*": ["constants/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "lib": ["es2019", "es2020", "esnext"],
    "exclude": ["node_modules", "dist"]
}
